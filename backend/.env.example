# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/private_board
DB_HOST=localhost
DB_PORT=5432
DB_NAME=private_board
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Claude API配置
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_URL=https://api.anthropic.com

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# 应用配置
APP_NAME="私人董事会系统"
APP_URL=http://localhost:3000
API_VERSION=v1

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket配置
SOCKET_CORS_ORIGIN=http://localhost:3000

# 会议配置
MAX_CONCURRENT_MEETINGS=5
MAX_DIRECTORS_PER_MEETING=8
DEFAULT_MEETING_MAX_ROUNDS=10

# Claude API使用限制
CLAUDE_DAILY_TOKEN_LIMIT=100000
CLAUDE_MAX_TOKENS_PER_REQUEST=1000
CLAUDE_REQUEST_TIMEOUT=30000